{
  "compilerOptions": {
    "allowJs": true,
    "jsx":"react",
    "module": "esnext",
    "target": "es2018",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "types": ["react-native"],
    "lib": [
      "es5",
      "es6",
      "es2015",
      "es2016",
      "es2017",
      "es2018",
      "esnext"
    ],
  },
  "include": [
    "src/**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "jest.config.js",
    "jest.setup.js",
    "commitlint.config.js"
  ],
}
